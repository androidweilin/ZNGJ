<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp"
                android:background="@color/bule">

    <ImageButton
        android:id="@+id/custom_back_image"
        style="@style/CustomActionBarBack"
        android:layout_width="@dimen/base60dp"
        android:layout_height="@dimen/base45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/base10dp"
        android:scaleType="centerInside"/>


    <TextView
        android:id="@+id/custom_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/base18sp"/>

</RelativeLayout>