<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base65dp"
        android:layout_marginTop="@dimen/base10dp"
        android:padding="@dimen/base10dp">

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/current_tv_shape"
            android:gravity="center"
            android:text="周内告警"
            android:textColor="@color/white"
            android:textSize="@dimen/base18sp"/>

        <TextView
            android:id="@+id/tv_trend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_marginRight="@dimen/base10dp"
            android:layout_weight="1"
            android:background="@drawable/current_tv_shape"
            android:gravity="center"
            android:text="告警趋势"
            android:textColor="@color/white"
            android:textSize="@dimen/base18sp"/>

        <TextView
            android:id="@+id/tv_distributed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/current_tv_shape"
            android:gravity="center"
            android:text="告警分布"
            android:textColor="@color/white"
            android:textSize="@dimen/base18sp"/>
    </LinearLayout>
</FrameLayout>