<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/base260dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/base15dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/base5dp"
            android:text="描述"
            android:textColor="@color/theme"
            android:textSize="@dimen/base18sp"
            />

        <View
            android:layout_width="@dimen/base240dp"
            android:layout_height="0.6dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="@dimen/base260dp"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/btnLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/bule"
                android:textSize="18sp"/>

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/bule"
                android:textSize="@dimen/base18sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
